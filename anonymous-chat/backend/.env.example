# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
BOT_WEBHOOK_DOMAIN=https://yourdomain.com
BOT_WEBHOOK_PATH=/webhook/bot

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=anonymous_chat_db
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Storage (MinIO or S3)
STORAGE_ENDPOINT=localhost
STORAGE_PORT=9000
STORAGE_ACCESS_KEY=your_access_key
STORAGE_SECRET_KEY=your_secret_key
STORAGE_BUCKET=chat-photos

# API
API_PORT=4000
API_URL=http://localhost:4000

# Admin Panel
ADMIN_PANEL_URL=http://localhost:4001

# Coin Prices
# COIN_MALE_TO_FEMALE=1
COIN_DIRECT_MESSAGE=1
COIN_REFERRAL_REWARD=20
COIN_FEMALE_MESSAGE_REWARD=1
COIN_SIGNUP_REWARD=10
MESSAGE_THRESHOLD_FOR_REWARD=30

# Block Fine
UNBLOCK_FINE_COINS=100

# Payment Settings
PAYMENT_TEST_MODE=false
PAYMENT_PROVIDER_TOKEN=

# Coin Purchase Packages (format: coins:stars)
